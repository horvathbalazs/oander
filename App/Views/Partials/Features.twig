{% if not features is empty %}
<section class="features">
	<div class="features__container">
		<div class="features__group">
			{% for row in 0 .. 1 %}
			<div class="features__row">
				{% for feature in features | slice(row * 2, 2) %}
				<div class="features__item">
					{% include 'Icons/%s.twig' | format(feature.icon | capitalize) with { 'block': 'features', 'title': feature.name } only %}

					<h3 class="features__name">{{ feature.name }}</h3>
				</div>

				{% if not loop.last %}
				<div class="features__separator features__separator--vertical"></div>
				{% endif %}
				{% endfor %}
			</div>

			{% if not loop.last %}
			<div class="features__separator features__separator--horizontal"></div>
			{% endif %}
			{% endfor %}
		</div>

		<div class="features__list">
			{% for feature in features | slice(0, 4) %}
			<div class="features__item">
				{% include 'Icons/%s.twig' | format(feature.icon | capitalize) with { 'block': 'features', 'title': feature.name } only %}

				<h3 class="features__name">{{ feature.name }}</h3>
			</div>

			{% if not loop.last %}
			<div class="features__separator features__separator--vertical"></div>
			{% endif %}
			{% endfor %}
		</div>
	</div>
</section>
{% endif %}
